// Prisma schema for crewdeck
// Run `pnpm prisma generate` after setting up your database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id          String   @id @default(cuid())
  user_id     String   @unique // Supabase auth user ID
  name        String
  slug        String   @unique
  profile_type String  @default("agency") // "agency" or "kol"
  niche       String   // DeFi, NFT, Web3, Gaming, etc.
  description String?
  website     String?
  email       String?
  location    String?
  founded     Int?
  team_size   Int?     // For agencies
  
  // KOL-specific fields
  twitter_handle      String?
  twitter_followers   Int?
  engagement_rate     Decimal?  @db.Decimal(4, 2)
  content_types       String[]  // ["threads", "videos", "spaces", "newsletters"]
  price_per_thread    Int?
  price_per_video     Int?
  price_per_space     Int?
  
  // Solana wallet
  solana_wallet       String?
  wallet_verified     Boolean   @default(false)
  
  // Verification
  verified    Boolean  @default(false)
  
  // Rating & Reviews
  rating      Float    @default(0)
  review_count Int      @default(0)
  
  // Pricing (for agencies)
  price_range_min Int?
  price_range_max Int?
  
  // Relations
  services    Service[]
  portfolio   Portfolio[]
  reviews     Review[]
  messages    Message[]
  
  // Metadata
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  
  @@index([profile_type])
  @@index([niche])
  @@index([verified])
  @@index([twitter_followers])
  @@index([wallet_verified])
}

model Service {
  id        String   @id @default(cuid())
  name      String
  profile_id  String
  profile    Profile   @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  
  created_at DateTime @default(now())
  
  @@index([profile_id])
}

model Portfolio {
  id          String   @id @default(cuid())
  title       String
  description String?
  image       String?
  metrics     String?
  profile_id    String
  profile      Profile   @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  
  created_at   DateTime @default(now())
  
  @@index([profile_id])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5
  comment   String?
  author    String?
  profile_id  String
  profile    Profile   @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  
  created_at DateTime @default(now())
  
  @@index([profile_id])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  profile_id  String
  profile    Profile   @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  sender_id  String?  // User ID
  
  created_at DateTime @default(now())
  
  @@index([profile_id])
}
